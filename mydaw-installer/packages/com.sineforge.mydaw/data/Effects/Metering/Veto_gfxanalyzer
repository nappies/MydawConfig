*/

slider1:6<0,9,1{16,32,64,128,256,512,1024,2048,4096,8192,16384,32768}>-FFT size
slider2:-120<-450,-12,6>-floor
slider3:0<0,1,1{disabled,enabled}>-show phase
slider4:2<0,3,1{rectangular,hamming,blackman-harris,blackman}>-window
slider5:300<0,2500,1>-integration time (ms)
slider6:0.13<0,1,0.01>-opacity
slider7:15<0,255,1>-enable plots
slider8:0<-9,9,0.1>-slope
// // Colors set to most distinguishable in LAB colorspace
// // (based on [0,0,0] [0,0,0.75] [0.6,0.,0.8] and [1,1,0])
slider31:   65535<0,16777215,1>-color 1-2
slider32: 1179903<0,16777215,1>-color 3-4
slider33:15597312<0,16777215,1>-color 5-6
slider34:13283583<0,16777215,1>-color 7-8
slider35:   29237<0,16777215,1>-color 9-10
slider36:16157952<0,16777215,1>-color 11-12
slider37: 4652800<0,16777215,1>-color 13-14
slider38: 2919891<0,16777215,1>-color 15-16

in_pin:1 - left in
in_pin:2 - right in
in_pin:3 - left in
in_pin:4 - right in
in_pin:5 - left in
in_pin:6 - right in
in_pin:7 - left in
in_pin:8 - right in
in_pin:9 - left in
in_pin:10 - right in
in_pin:11 - left in
in_pin:12 - right in
in_pin:13 - left in
in_pin:14 - right in
in_pin:15 - left in
in_pin:16 - right in
options:no_meter

@init

LINUX_COMP=0;  // workaround for bug https://forum.cockos.com/showthread.php?p=1903928#post1903928 on Ubuntu 14.04

function init_bufs()
  instance(recpos,fftworkspace,integrate_buf,startpos)
(
  recpos = startpos;
  fftworkspace = startpos+histsize;
  fftworkspace = ceil(fftworkspace/65536)*65536; // https://forum.cockos.com/showpost.php?p=1922136&postcount=6
  integrate_buf = fftworkspace + max_fft_size*2;
  integrate_buf + max_fft_size;
);
function get_spls(spls)
  instance(recpos,update,startpos,en)
(
  en ? (
    abs(recpos[]=spls) > minvol ? update=1;
    recpos = ((recpos+1) >= startpos+histsize ? startpos : (recpos+1));
  );
);
function check_enab(enab)
  instance(en,len,startpos)
(
  (en=enab) ? len=en
  : len ? (
    memset(startpos,0,histsize);
    len=en;
  );
);
function prgb2rgb(prgb) (
  stack_push((prgb&0xff0000)>>16);
  stack_push((prgb&0x00ff00)>>8);
  stack_push(prgb&0x0000ff);
);
function prgb2rgbfloat(prgb) local(tmpR,tmpG,tmpB) (
  prgb2rgb(prgb);
  tmpR=stack_pop();
  tmpG=stack_pop();
  tmpB=stack_pop();
  stack_push(tmpB/255);
  stack_push(tmpG/255);
  stack_push(tmpR/255);
);
function setColor(sl)
  instance(r,g,b,lColSlider)
(
  sl|=0;
  sl!=lColSlider ? (
    lColSlider=sl;
    prgb2rgbfloat(sl);
    r=stack_pop(); g=stack_pop(); b=stack_pop();
    old_w=0;
  );
);

gfx_ext_retina=1.0;
ext_nodenorm=1;
ext_noinit=1;
max_fft_size=32768;
fftsize=max_fft_size;
gfx_clear=-1;
windowtype=-1;
fftidx=-1;
histsize=max_fft_size + (max_fft_size*0.5 - 1);
show_ctrls=0;
lgfx_ext_retina=-1;
pad1=3; pad2=2; pad3=8;

window=0;
slope_coeffs=window+(max_fft_size*0.5 + 1);
c1.startpos=slope_coeffs+max_fft_size*0.5;
c2.startpos=c1.init_bufs();
c3.startpos=c2.init_bufs();
c4.startpos=c3.init_bufs();
c5.startpos=c4.init_bufs();
c6.startpos=c5.init_bufs();
c7.startpos=c6.init_bufs();
c8.startpos=c7.init_bufs();
c8.init_bufs();

@slider
slider2 != lfloor ? old_w=0;

c1.setColor(slider31);
c2.setColor(slider32);
c3.setColor(slider33);
c4.setColor(slider34);
c5.setColor(slider35);
c6.setColor(slider36);
c7.setColor(slider37);
c8.setColor(slider38);

@block
slider2 != lfloor ? (
  lfloor = slider2;
  minvol=2*exp(log(10)/20*slider2);
);

c1.check_enab(slider7&1);
c2.check_enab(slider7&2);
c3.check_enab(slider7&4);
c4.check_enab(slider7&8);
c5.check_enab(slider7&16);
c6.check_enab(slider7&32);
c7.check_enab(slider7&64);
c8.check_enab(slider7&128);

